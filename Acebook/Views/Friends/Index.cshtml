@using Microsoft.EntityFrameworkCore.Metadata.Internal

<!-- Main Body -->
<div class="flex justify-center w-full">
    <div class="flex flex-col items-center space-y-4 w-full max-w-3xl">

        <!-- Filter buttons -->
        <div class="flex justify-center mt-4" role="group" aria-label="requests filters">
            <label for="received"
                class="[&:has(#received:checked)]:bg-blue-500 [&:has(#received:checked)]:text-white w-40 px-4 py-2 text-sm font-medium text-gray-600 bg-white border border-gray-300 rounded-l-md cursor-pointer hover:bg-gray-200 text-center">
                Friend Requests
            </label>
            <label for="sent"
                class="[&:has(#sent:checked)]:bg-blue-500 [&:has(#sent:checked)]:text-white w-40 px-4 py-2 text-sm font-medium text-gray-600 bg-white border border-gray-300 border-l-0 rounded-r-md cursor-pointer hover:bg-gray-200 text-center">
                Sent Requests
            </label>
        </div>

        <!-- Requests Section -->
        <div class="bg-white rounded-lg w-full p-4 shadow-md hidden md:block">
            <input type="radio" id="received" name="request-toggle" class="hidden peer/received" checked>
            <input type="radio" id="sent" name="request-toggle" class="hidden peer/sent">

            <h2 class="text-lg font-bold mb-3">Your Requests</h2>

            <!-- Received Requests -->
            <div id="received-requests" class="space-y-2">

                @foreach (var request in ViewBag.ReceivedRequests)
                {
                    var sender = request.Requester;

                    <div class="flex items-center gap-3">
                        <img src="/images/Placeholder.png"
                            class="w-12 h-12 rounded-full object-cover border border-gray-400" />
                        <span class="font-medium text-gray-800">@sender.FirstName @sender.LastName</span>

                        <form asp-action="Accept" asp-controller="Friends" method="post" onsubmit="return confirm('Are you sure you want to be friends?');" class="ml-auto">
                            <input type="hidden" name="friendId" value="@request.Id" />
                            <button type="submit"
                                class="bg-teal-600 hover:bg-teal-700 text-white text-xs font-medium py-1 px-2 rounded">
                                Accept
                            </button>
                        </form>

                        <form asp-action="Reject" asp-controller="Friends" method="post" onsubmit="return confirm('Are you sure you do not want to be friends?');">
                            <input type="hidden" name="friendId" value="@request.Id" />
                            <button type="submit"
                                class="bg-gray-400 hover:bg-gray-500 text-white text-xs font-medium py-1 px-2 rounded">
                                Decline
                            </button>
                        </form>
                    </div>
                }
            </div>


            <!-- Sent Requests -->
            <div class="space-y-2" id="sent-requests">

                @foreach (var request in ViewBag.SentRequests)
                {
                    var receiver = request.Accepter;

                    <div class="flex items-center gap-3">
                        <img src="/images/Placeholder.png"
                            class="w-12 h-12 rounded-full object-cover border border-gray-400" />
                        <span class="font-medium text-gray-800">@receiver.FirstName @receiver.LastName</span>

                        <form asp-action="Reject" asp-controller="Friends" method="post" onsubmit="return confirm('Are you sure you want to cancel your request?');" class="ml-auto">
                            <input type="hidden" name="friendId" value="@request.Id" />
                            <button type="submit"
                                class="bg-red-500 hover:bg-red-600 text-white text-xs font-medium py-1 px-2 rounded">
                                Cancel
                            </button>
                        </form>
                    </div>
                }
            </div>

            <!-- Getting the buttons to hide stuff -->
            <style>
                /* Hide both by default */
                #received-requests,
                #sent-requests {
                    display: none;
                }

                /* Show received when its radio is checked */
                #received:checked~#received-requests {
                    display: block;
                }

                /* Show sent when its radio is checked */
                #sent:checked~#sent-requests {
                    display: block;
                }
            </style>

        </div>

        <!-- Friend List Section -->
        <div class="bg-white rounded-lg w-full p-4 shadow-md hidden md:block">
            <h2 class="text-lg font-bold mb-3">Friend List</h2>

            @foreach (var friend in ViewBag.Friends)
            {
                User other;
                if (friend.RequesterId == ViewBag.CurrentUserId)
                {
                    other = friend.Accepter;
                }
                else
                {
                    other = friend.Requester;
                }

                <div class="flex items-center justify-between gap-3 mb-2 p-2 rounded-lg hover:bg-gray-100 transition">
                    <div class="flex items-center gap-3 mb-2">
                        <img src="/images/Placeholder.png"
                            class="w-12 h-12 rounded-full object-cover border border-gray-400">
                        <h3 class="text-md font-semibold text-gray-800">@other.FirstName @other.LastName</h3>
                    </div>

                    <form asp-action="Unfriend" asp-controller="Friends" method="post"
                        onsubmit="return confirm('Are you sure you want to unfriend this person?');">
                        <input type="hidden" name='friendId' value="@friend.Id" />
                        <button type="submit"
                            class="bg-red-500 hover:bg-red-600 text-white text-sm font-medium py-1 px-3 rounded">Unfriend</button>
                    </form>
                </div>
            }
        </div>
    </div>
</div>