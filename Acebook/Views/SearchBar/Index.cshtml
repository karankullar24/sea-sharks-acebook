@{
    List<Comment>? comments = ViewBag.CommentsResults as List<acebook.Models.Comment>;
}

@if (ViewBag.CommentsResults != null && comments.Count > 0)
{

    <!-- comments -->
    <br />
    <div class="bg-teal-700/10 p-2 rounded-lg shadow-[0_0_15px_rgba(15,118,110,0.3)] max-h-[70vh] overflow-hidden">
        <h2 class="mb-4 text-teal-600 text-3xl text-center font-bold ">Comment results</h2>

        @foreach (Comment comment in comments.Take(3))
        {
            <div class="bg-white rounded-lg w-full p-4 mt-4 mb-2 shadow-md hidden md:block">
                <div class="flex justify-between items-center">
                    <h3 class="text-md font-semibold text-gray-800">@comment.Post.User.FirstName @comment.Post.User.LastName
                    </h3>
                    <img src="/images/Placeholder.png" class="w-12 h-12 rounded-full object-cover border border-gray-400">
                </div>

                <p class="text-gray-700 mt-2 leading-relaxed">
                    @if (@comment.Post.CheckLength())
                    {
                        @comment.Post.Content
                    }
                    else
                    {
                        @comment.Post.FormatPostContent()
                    }
                </p>

                <div class="flex justify-end mt-2">
                    <a asp-controller="Posts" asp-action="Post" asp-route-id="@comment.Post.Id" method="get">
                        <button data-testid="see-more-button" class="text-teal-600 text-sm hover:underline">see more</button>
                    </a>
                </div>

                <p class="text-xs text-gray-400 mt-4">Created on: @comment.Post.FormattedCreatedOn</p>

                <div class="flex border-t border-gray-200 divide-x divide-gray-200 justify-around mt-4 pt-3">
                    <button
                        class="relative flex-1 inline-flex items-center justify-center overflow-hidden text-gray-600 text-sm bg-transparent hover:bg-white group py-2 px-4 font-medium transition-all">
                        <span
                            class="absolute w-96 h-72 bg-teal-600 bottom-0 left-0 translate-x-full translate-y-full ease-out duration-500 transition-all group-hover:translate-x-0 group-hover:translate-y-0"></span>
                        <span class="relative text-gray-600 transition-colors duration-300 ease-in-out group-hover:text-white">
                            Like (@comment.Post.Likes.Count())
                        </span>
                    </button>

                    <a asp-controller="Posts" asp-action="Post" asp-route-id="@comment.Post.Id" method="get"
                        class="relative flex-1 inline-flex items-center justify-center overflow-hidden text-gray-600 text-sm bg-transparent hover:bg-white group py-2 px-4 font-medium transition-all">
                        <button data-testid="comment-button"
                            class="relative flex-1 inline-flex items-center justify-center overflow-hidden text-gray-600 text-sm bg-transparent hover:bg-white group py-2 px-4 font-medium transition-all">
                            <span
                                class="absolute w-96 h-72 bg-teal-600 bottom-0 left-0 translate-x-full translate-y-full ease-out duration-500 transition-all group-hover:translate-x-0 group-hover:translate-y-0"></span>
                            <span
                                class="relative text-gray-600 transition-colors duration-300 ease-in-out group-hover:text-white">
                                Comment (@comment.Post.Comments.Count())
                            </span>
                        </button>
                    </a>

                    <button
                        class="relative flex-1 inline-flex items-center justify-center overflow-hidden text-gray-600 text-sm bg-transparent hover:bg-white group py-2 px-4 font-medium transition-all">
                        <span
                            class="absolute w-96 h-72 bg-teal-600 bottom-0 left-0 translate-x-full translate-y-full ease-out duration-500 transition-all group-hover:translate-x-0 group-hover:translate-y-0"></span>
                        <span class="relative text-gray-600 transition-colors duration-300 ease-in-out group-hover:text-white">
                            View Profile
                        </span>
                    </button>
                </div>
            </div>
        }
        @if (comments.Count > 3)
        {
            <div data-section="comments" class="hidden more-comments">
                @foreach (var comment in comments.Skip(3))
                {
                    <div class="bg-white rounded-lg w-full p-4 mt-4 shadow-md hidden md:block">
                        <div class="flex justify-between items-center">
                            <h3 class="text-md font-semibold text-gray-800">@comment.Post.User.FirstName @comment.Post.User.LastName
                            </h3>
                            <img src="/images/Placeholder.png" class="w-12 h-12 rounded-full object-cover border border-gray-400">
                        </div>

                        <p class="text-gray-700 mt-2 leading-relaxed">
                            @if (@comment.Post.CheckLength())
                            {
                                @comment.Post.Content
                            }
                            else
                            {
                                @comment.Post.FormatPostContent()
                            }
                        </p>

                        <div class="flex justify-end mt-2">
                            <a asp-controller="Posts" asp-action="Post" asp-route-id="@comment.Post.Id" method="get">
                                <button data-testid="see-more-button" class="text-teal-600 text-sm hover:underline">see
                                    more</button>
                            </a>
                        </div>

                        <p class="text-xs text-gray-400 mt-4">Created on: @comment.Post.FormattedCreatedOn</p>

                        <div class="flex border-t border-gray-200 divide-x divide-gray-200 justify-around mt-4 pt-3">
                            <button
                                class="relative flex-1 inline-flex items-center justify-center overflow-hidden text-gray-600 text-sm bg-transparent hover:bg-white group py-2 px-4 font-medium transition-all">
                                <span
                                    class="absolute w-96 h-72 bg-teal-600 bottom-0 left-0 translate-x-full translate-y-full ease-out duration-500 transition-all group-hover:translate-x-0 group-hover:translate-y-0"></span>
                                <span
                                    class="relative text-gray-600 transition-colors duration-300 ease-in-out group-hover:text-white">
                                    Like (@comment.Post.Likes.Count())
                                </span>
                            </button>

                            <a asp-controller="Posts" asp-action="Post" asp-route-id="@comment.Post.Id" method="get"
                                class="relative flex-1 inline-flex items-center justify-center overflow-hidden text-gray-600 text-sm bg-transparent hover:bg-white group py-2 px-4 font-medium transition-all">
                                <button data-testid="comment-button"
                                    class="relative flex-1 inline-flex items-center justify-center overflow-hidden text-gray-600 text-sm bg-transparent hover:bg-white group py-2 px-4 font-medium transition-all">
                                    <span
                                        class="absolute w-96 h-72 bg-teal-600 bottom-0 left-0 translate-x-full translate-y-full ease-out duration-500 transition-all group-hover:translate-x-0 group-hover:translate-y-0"></span>
                                    <span
                                        class="relative text-gray-600 transition-colors duration-300 ease-in-out group-hover:text-white">
                                        Comment (@comment.Post.Comments.Count())
                                    </span>
                                </button>
                            </a>

                            <button
                                class="relative flex-1 inline-flex items-center justify-center overflow-hidden text-gray-600 text-sm bg-transparent hover:bg-white group py-2 px-4 font-medium transition-all">
                                <span
                                    class="absolute w-96 h-72 bg-teal-600 bottom-0 left-0 translate-x-full translate-y-full ease-out duration-500 transition-all group-hover:translate-x-0 group-hover:translate-y-0"></span>
                                <span
                                    class="relative text-gray-600 transition-colors duration-300 ease-in-out group-hover:text-white">
                                    View Profile
                                </span>
                            </button>
                        </div>
                    </div>
                }
            </div>
            <button class="see-more-btn text-teal-600 hover:underline mt-2" data-target="comments"> Show All Results</button>
        }
    </div>
}
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const buttons = document.querySelectorAll(".see-more-btn");

        buttons.forEach(button => {
            button.addEventListener("click", function () {
                const target = button.getAttribute("data-target");
                const hiddenDiv = document.querySelector(`[data-section='${target}']`);

                if (hiddenDiv) {
                    hiddenDiv.classList.toggle("hidden");
                    button.textContent = hiddenDiv.classList.contains("hidden")
                        ? "Show All Results"
                        : "Show Less";
                }
            });
        });
    });
</script>