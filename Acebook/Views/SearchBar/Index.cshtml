                {
    <div class="bg-white rounded-lg w-full p-4 shadow-[0_0_15px_rgba(15,118,110,0.3)] relative mb-6">
            <div class="flex items-start mb-3">
                <img src="/images/Placeholder.png" class="w-12 h-12 rounded-full object-cover border border-gray-400 mr-3">

                <div class="flex-1">
                    <h3 class="text-md font-semibold text-gray-800">
                        @comment.Post.User.FirstName @comment.Post.User.LastName
                    </h3>
                    <p class="text-gray-700 mt-1 leading-relaxed">@comment.Post.Content</p>
                    <p class="text-xs text-gray-400 mt-2">Created on: @comment.Post.FormattedCreatedOn</p>
                </div>
            </div>

            <div class="bg-teal-700/10 rounded-lg mt-2 ml-1  p-3 shadow-md flex items-start justify-between">
                <div class="flex items-start">
                    <img src="/images/Placeholder.png" class="w-8 h-8 rounded-full object-cover border border-gray-400 mr-3">

                    <div>
                        <h3 class="text-sm font-semibold text-gray-800">
                            @comment.User.FirstName @comment.User.LastName
                        </h3>
                        <p class="text-gray-700 text-sm mt-1 leading-snug">@comment.Content</p>
                        <p class="text-xs text-gray-400 mt-2">Commented on: @comment.FormattedCreatedOn</p>
                    </div>
                </div>

                <div class="ml-4 flex items-center">
                    <a asp-controller="Posts" asp-action="Post" asp-route-id="@comment.Post.Id" class="inline-flex items-center justify-center text-sm py-1.5 px-3 bg-teal-600 text-white font-medium rounded-lg shadow-md hover:bg-teal-700 transition">See all comments</a>
                </div>
            </div>
        </div>
                }
            </div>
            <button class="see-more-btn text-teal-600 hover:underline mt-2" data-target="comments"> Show All Results</button>
        }
</div>
}
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const buttons = document.querySelectorAll(".see-more-btn");

        buttons.forEach(button => {
            button.addEventListener("click", function () {
                const target = button.getAttribute("data-target");
                const hiddenDiv = document.querySelector(`[data-section='${target}']`);

                if (hiddenDiv) {
                    hiddenDiv.classList.toggle("hidden");
                    button.textContent = hiddenDiv.classList.contains("hidden")
                        ? "Show All Results"
                        : "Show Less";
                }
            });
        });
    });
</script>