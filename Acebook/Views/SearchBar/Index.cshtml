        <!-- User List Section -->
        <div class="bg-white rounded-lg w-full p-4 mt-4 shadow-md md:block border">
 
            @foreach (var user in ViewBag.UsersResults)
            {
                <div class="flex items-center justify-between gap-3 mb-2 p-2 rounded-lg hover:bg-gray-100 transition">
                    <div class="flex items-center gap-3 mb-2">
                        <img src="/images/Placeholder.png"
                            class="w-12 h-12 rounded-full object-cover border border-gray-400">
                        <a asp-controller="Users" asp-action="Index" asp-route-id="@user.Id" id="friend-name" data-testid="@user.FirstName" class="text-md font-semibold text-gray-800 hover:text-teal-600">@user.FirstName @user.LastName</a>
