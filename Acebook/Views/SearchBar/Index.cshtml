                <div class="flex items-center gap-3 mb-2">
                    <img src="/images/Placeholder.png" class="w-12 h-12 rounded-full object-cover border border-gray-400">
                    <a asp-controller="Users" asp-action="Index" asp-route-id="@user.Id" id="friend-name"
                        data-testid="@user.FirstName"
                        class="text-md font-semibold text-gray-800 hover:text-teal-600">@user.FirstName @user.LastName</a>

                </div>
                <a asp-controller="Users" asp-action="Index" asp-route-id="@user.Id" class="flex justify-center">
                    <button
