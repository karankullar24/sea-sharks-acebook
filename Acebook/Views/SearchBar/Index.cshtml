@using acebook.Controllers

@{
    ViewData["Title"] = "Search Results";
    var searchString = ViewData["SearchString"] as string;
}



@if (!string.IsNullOrWhiteSpace(searchString))
{
    <h1 class="text-4xl font-bold mb-4 text-teal-600 pb-6 text-center">Search Results for: <strong>@searchString</strong>
    </h1>
}
<!-- User List Section -->
@{
    var users = ViewBag.UsersResults as List<acebook.Models.User>;
}

@if (ViewBag.UsersResults != null && users.Count > 0)
{
    <div class="bg-teal-700/10 p-2 mb-10 rounded-lg shadow-[0_0_15px_rgba(15,118,110,0.3)]">
        <h2 class="mb-4 text-teal-600 text-3xl font-bold p-2 ">User results</h2>
        <br />
        @foreach (var user in users.Take(3))
        {
            <div class="flex items-center justify-between gap-3 mb-4 p-4 rounded-lg bg-white  transition">
                <div class="flex items-center gap-3">
                    <img src="/images/Placeholder.png" class="w-12 h-12 rounded-full object-cover border border-gray-400">
                    <a asp-controller="Users" asp-action="Index" asp-route-id="@user.Id" id="friend-name"
                        data-testid="@user.FirstName"
                        class="text-md font-semibold text-gray-800 hover:text-teal-600">@user.FirstName @user.LastName</a>

                </div>
                <a asp-controller="Users" asp-action="Index" asp-route-id="@user.Id" class="flex justify-center">
                    <button
                        class="relative h-10 w-28 flex items-center justify-center text-gray-600 text-xs bg-transparent group font-medium rounded-md transition-all border border-gray-200 shadow-sm overflow-hidden">
                        <span
                            class="absolute inset-0 bg-teal-600 transition-all flex items-center justify-center text-white hover:bg-white hover:text-teal-600">
                            View Profile
                        </span>
                    </button>
                </a>
            </div>
        }
        @if (users.Count > 3)
        {
            <div data-section="users" class="hidden more-users">
                @foreach (var user in users.Skip(3))
                {
                <div class="flex items-center justify-between gap-3 mb-10 p-4 rounded-lg bg-white  transition">
                <div class="flex items-center gap-3 mb-2">
                    <img src="/images/Placeholder.png" class="w-12 h-12 rounded-full object-cover border border-gray-400">
                    <a asp-controller="Users" asp-action="Index" asp-route-id="@user.Id" id="friend-name"
                        data-testid="@user.FirstName"
                        class="text-md font-semibold text-gray-800 hover:text-teal-600">@user.FirstName @user.LastName</a>

                </div>
                <a asp-controller="Users" asp-action="Index" asp-route-id="@user.Id" class="flex justify-center">
                    <button
                        class="relative h-10 w-28 flex items-center justify-center text-gray-600 text-xs bg-transparent group font-medium rounded-md transition-all border border-gray-200 shadow-sm overflow-hidden">
                        <span
                            class="absolute inset-0 bg-teal-600 transition-all flex items-center justify-center text-white hover:bg-white hover:text-teal-600">
                            View Profile
                        </span>
                    </button>
                </a>
            </div>
                }
            </div>
            <button class="see-more-btn text-teal-600 mt-2 font-semibold p-2 hover:bg-teal-600/20 rounded-lg transition" data-target="users"> Show All Results</button>
        }
    </div>
}
