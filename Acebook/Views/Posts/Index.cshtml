<h1>Posts</h1>

<form action="/posts" method="post">
  <input type="text" name="content"/>
  <input type="submit" value="Submit"/>
</form>

@foreach (Post post in ViewBag.Posts)
{
  <p>user: @post.User.FirstName @post.User.LastName 
    post: @post.Content 
    datecreated: @post.CreatedOn.ToString("dd MMM yyyy HH:mm")
  </p>
}

