<div class="relative flex justify-center w-full mt-8">

  <div class="flex flex-col items-center space-y-4 w-full max-w-4xl">
    <div class="bg-white rounded-lg w-full max-w-4xl p-4 items-center shadow-md hidden md:block">
      <h2 class="text-lg font-bold mb-3">Create a Post</h2>
      <form action="/posts" method="post">

        <textarea
          class="w-full resize-none border p-3 rounded-md focus:outline-none focus:border-teal-500 focus:ring-2 focus:ring-gray-400 focus:ring-opacity-25 transition-shadow duration-200"
          name="content" maxlength=2000 placeholder="Make a splash! (max 2000 characters)"></textarea>
        <div class="flex justify-between items-center mt-3">
          <label class="flex items-center text-sm text-teal-500 hover:underline">Attach Image</label>
          <button type="submit"
            class="bg-teal-600 text-white text-sm font-medium px-4 py-2 rounded-md hover:bg-teal-400">Submit</button>
        </div>
      </form>
    </div>

    <div data-testid="post filters" class="flex justify-center  mt-4" role=group aria-label="post filters">
      <button
        class="w-40 px-4 py-2 text-sm font-medium text-gray-600 bg-white border border-gray-300 rounded-l-md hover:bg-gray-200">All
        Posts</button>
      <button
        class="w-40 px-4 py-2 text-sm font-medium text-gray-600 bg-white border border-gray-300 border-l-0 rounded-r-md hover:bg-gray-200">Friends'
        Posts</button>
    </div>



    <!-- Posts 'cards' current placeholder text in name, description, time of post, and picture. Needs to be modular once Post model is further complete -->
    @foreach (Post post in ViewBag.Posts)
    {
      <div class="bg-white rounded-lg w-full max-w-4xl p-4 mt-4 relative shadow-md hidden md:block">
        <div class="flex justify-between items-center">
          <h3 class="text-md font-semibold text-gray-800">@post.User.FirstName @post.User.LastName</h3>
          <img src="/images/Placeholder.png" class="w-12 h-12 rounded-full object-cover border border-gray-400">
        </div>

        <p class="text-gray-700 mt-2 leading-relaxed">@if(@post.CheckLength()) {
          @post.Content
        } else
        {

          @post.FormatPostContent()
        }
      </p>

      <div class="flex justify-end mt-2"><button class="text-teal-600 text-sm hover:underline">see more</button></div>
      <p class="text-xs text-gray-400 mt-4">Created on: @post.FormattedCreatedOn</p>
      <!-- Button box below for Like, Comment, and View Profile with transitions - to add JS for onclick styling (once filtered) -->
      <div class="flex border-t border-gray-200 divide-x divide-gray-200 justify-around mt-4 pt-3">
        <button
          class="relative flex-1 inline-flex items-center justify-center overflow-hidden text-gray-600 text-sm bg-transparent hover:bg-white group py-2 px-4 font-medium transition-all">
          <span
            class="absolute w-96 h-72 bg-teal-600 bottom-0 left-0 translate-x-full translate-y-full ease-out duration-500 transition-all group-hover:translate-x-0 group-hover:translate-y-0"></span>
          <span class="relative text-gray-600 transition-colors duration-300 ease-in-out group-hover:text-white"> Like
            (12)
          </span>
        </button>
        <button
          class="relative flex-1 inline-flex items-center justify-center overflow-hidden text-gray-600 text-sm bg-transparent hover:bg-white group py-2 px-4 font-medium transition-all">
          <span
            class="absolute w-96 h-72 bg-teal-600 bottom-0 left-0 translate-x-full translate-y-full ease-out duration-500 transition-all group-hover:translate-x-0 group-hover:translate-y-0"></span>
          <span class="relative text-gray-600 transition-colors duration-300 ease-in-out group-hover:text-white">
            Comment (0)
          </span>
        </button>
        <button
          class="relative flex-1 inline-flex items-center justify-center overflow-hidden text-gray-600 text-sm bg-transparent hover:bg-white group py-2 px-4 font-medium transition-all">
          <span
            class="absolute w-96 h-72 bg-teal-600 bottom-0 left-0 translate-x-full translate-y-full ease-out duration-500 transition-all group-hover:translate-x-0 group-hover:translate-y-0"></span>
          <span class="relative text-gray-600 transition-colors duration-300 ease-in-out group-hover:text-white"> View
            Profile
          </span>
        </button>

      </div>
    </div>
        }

