@model Acebook.ViewModels.SignInViewModel
<div class="text-center">
    <h1 id="greeting" class="display-4">Welcome To Acebook</h1>
    
    <form asp-action="Create" asp-controller="Sessions" method="post" novalidate>
      <div asp-validation-summary = "ModelOnly" class="text-danger"> </div>
      <div><input asp-for='Email' id='email' placeholder='Email' /><span asp-validation-for="Email"></span></div>
      <div><input asp-for='Password' id='password' placeholder="Password" /><span asp-validation-for="Password"></span></div>
      <div><input type="checkbox" onclick="myFunction()">Show Password</div>
      <div><input type='submit' id='submit' value='Sign in' /></div>
      @if(ViewBag.Error != null){
        <div id="error-message"> @ViewBag.Error </div>
      }
    </form>
    <a href="/signup" id="signup">Not a user? Sign up here!</a>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script>
function myFunction() {
  var x = document.getElementById("password");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
</script>